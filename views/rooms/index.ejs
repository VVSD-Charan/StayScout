<% layout('layouts/boilerplate') %>

<div id="map" style="width: 100%; height: 500px;"></div>

<h1>All rooms</h1>

<div class="mb-3">
    <a href="/rooms/new" >Add Rooms for rent</a>
</div>


<% for (let room of rooms) { %>

    <div class="card mb-3">
        <div class="row">

            <% if(room.images.length > 0) { %>
                <div class="col-md-4 mb-3">
                    <img src="<%= room.images[0].url %>" alt="<%= room.title%>" class="img-fluid">
                </div>
            <% } else { %>
                <div class="col-md-4 mb-3">
                    <img src=" https://tse3.mm.bing.net/th?id=OIP.M2WECJFVXPA94wpCfwYjaQHaHa&pid=Api&P=0&h=180" alt="<%= room.title%>" class="img-fluid">
                </div>
            <% } %>

            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= room.title %>
                    </h5>
                    <h5 class="card-title">
                        <%= room.properties.popUpMarkup %>
                    </h5>
                    <p class="card-text">
                        <%= room.description %>
                    </p>
                    <p class="card-text">
                        <small class="text-muted">
                            <%= room.location %>
                        </small>
                    </p>
                    <a href="/rooms/<%= room.id %>" class="btn btn-primary">
                        View <%= room.title %>
                    </a>
                </div>
            </div>
        </div>
    </div>
        
<% } %>

<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const rooms = {features : <%-JSON.stringify(rooms)%>}
</script>

<script src="/javascripts/clusterMaps.js"></script>

